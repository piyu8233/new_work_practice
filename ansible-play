---
 - name: creating a nsible playbook for practice
   hosts: all
   tasks:
     - name: installing a httpd service
       yum:
        name: httpd
        state: present
  
     - name: start of httpd service
       service:
        name: httpd
        state: started

     - name: creating a new user in remote machine
       user:
        name: piyush
        home: /home/piyush
        shell: /bin/bash
